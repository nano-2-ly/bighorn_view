<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GraphActivity">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/data_mRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        >

    </androidx.recyclerview.widget.RecyclerView>


    <Button
        android:id="@+id/webgraph_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="웹에서 보기"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/data_mRecyclerView">

    </Button>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent">


        <Button
            android:id="@+id/data_button1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintEnd_toStartOf="@+id/data_button2"

            android:background="@drawable/home"


            app:layout_constraintTop_toTopOf="parent">

        </Button>

        <Button
            android:id="@+id/data_button2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintStart_toEndOf="@+id/data_button1"
            app:layout_constraintEnd_toStartOf="@+id/data_button3"
            app:layout_constraintHorizontal_weight="1"
            android:background="@drawable/graph"
            app:layout_constraintTop_toTopOf="parent">

        </Button>

        <Button
            android:id="@+id/data_button3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintStart_toEndOf="@+id/data_button2"
            app:layout_constraintEnd_toStartOf="@+id/data_button4"
            app:layout_constraintHorizontal_weight="1"
            android:background="@drawable/link"
            app:layout_constraintTop_toTopOf="parent">

        </Button>

        <Button
            android:id="@+id/data_button4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintStart_toEndOf="@+id/data_button3"
            app:layout_constraintEnd_toStartOf="@+id/data_button5"
            app:layout_constraintHorizontal_weight="1"
            android:background="@drawable/group"
            app:layout_constraintTop_toTopOf="parent">

        </Button>

        <Button
            android:id="@+id/data_button5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintStart_toEndOf="@+id/data_button4"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/settings"
            app:layout_constraintTop_toTopOf="parent">

        </Button>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>